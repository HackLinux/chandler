# manifest.win
#
# Variables maintain their value until changed, so be aware of the order of
# things...
# 
# src: set this to be relative to buildenv['root']
# dest: set this to be relative to buildenv['distdir']
# recursive: set to yes or no
# glob: set to a comma-separated list of glob patterns

exclude=.svn,*.pyo,*.pyc

# Grab certain dll's from debug/bin
src=chandler/debug/bin
dest=debug/bin
libdb44d.dll
libdb_java44d.dll
msvcp71d.dll
msvcr71d.dll
msvcrtd.dll
python24_d.dll 
icudt34.dll
iculx34d.dll
icuin34d.dll
icutestd.dll
icuio34d.dll
icutu34d.dll
icule34d.dll
icuuc34d.dll


# Grab all py, pyc, etc. from debug/bin/DLLs
src=chandler/debug/bin
dest=debug/bin
glob=*.py,*.pyd,*.so,*.dll,*.security
recursive=yes
DLLs

# Recursively grab python libraries
src=chandler/debug/bin
dest=debug/bin
recursive=yes
glob=*.py,*.pyd,*.so,*.security
Lib/compiler
Lib/distutils
Lib/email
Lib/encodings
Lib/hotshot
Lib/logging
Lib/xml

# Grab files from the Lib directory
recursive=no
Lib

# Recursively grab python libraries
src=chandler/debug/bin/Lib
dest=debug/bin/Lib
recursive=yes
glob=*
site-packages


# Grab Chandler.py and others
src=chandler
dest=
Chandler.py
version.py
run_tests.py
LICENSE.txt
Chandler-project.wpr

# Grab the rest of Chandler from the application/ and parcel/ folders
recursive=yes
glob=*.py,*.png,*.xrc,*.daml,*.gif,*.xml,*.txt,*.bmp,*.jpg,*.html,*.pack,*.pem,*.ics,*.js,*.css,*.sh
application
parcels
util
tools

glob=*
repository
resources
i18n


# Grab the launchers and windows README
src=chandler/distrib/win
README.win.txt

src=chandler
dest=
chandlerDebug.exe

src=chandler/debug/bin
dest=debug/bin
chandler.exe
python_d.exe
chandler.exe.manifest
python_d.exe.manifest
# and the launch scripts
src=chandler/debug
dest=debug
RunChandler.bat
RunPython.bat

# Grab the overall README
src=chandler/distrib
README.txt
