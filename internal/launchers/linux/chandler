#!/bin/sh

if [ "$CHANDLERHOME" = "" ]
then
    CHANDLERHOME=`dirname $0`
fi

if [ "$CHANDLERBIN" = "" ]
then
    CHANDLERBIN=$CHANDLERHOME
fi

export CHANDLERHOME
export CHANDLERBIN

export PYTHONPATH="$CHANDLERHOME:$CHANDLERHOME/parcels"
export PYTHONHOME="$CHANDLERBIN"/release
export LD_LIBRARY_PATH="$CHANDLERBIN"/release/lib:"$CHANDLERBIN"/release/db/lib:"$CHANDLERBIN"/release/icu/lib:"$CHANDLERBIN"/release/j2re-image/lib/i386:"$CHANDLERBIN"/release/j2re-image/lib/i386/client
export LC_PATH="$CHANDLERBIN"/release/share/locale

if [ "$PARCELPATH" != "" ]
then
    export PYTHONPATH="$PYTHONPATH":"$PARCELPATH"
fi

cd $CHANDLERHOME

"$CHANDLERBIN"/release/bin/python -O Chandler.py "$@"
