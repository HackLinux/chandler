#!/bin/sh

if [ "$CHANDLERHOME" = "" ]
then
    CHANDLERHOME=`dirname $0`
fi

if [ "$CHANDLERBIN" = "" ]
then
    CHANDLERBIN=$CHANDLERHOME
fi

export CHANDLERHOME
export CHANDLERBIN

export PYTHONPATH="$CHANDLERHOME:$CHANDLERHOME/parcels"
export PYTHONHOME="$CHANDLERBIN"/debug
export LD_LIBRARY_PATH="$CHANDLERBIN"/debug/lib:"$CHANDLERBIN"/debug/db/lib:"$CHANDLERBIN"/debug/icu/lib
export LC_PATH="$CHANDLERBIN"/debug/share/locale

if [ "$PARCELPATH" != "" ]
then
    export PYTHONPATH="$PYTHONPATH":"$PARCELPATH"
fi

cd $CHANDLERHOME

"$CHANDLERBIN"/debug/bin/python_d Chandler.py "$@"
